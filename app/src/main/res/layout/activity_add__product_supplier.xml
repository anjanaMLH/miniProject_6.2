<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginBottom="150dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"

            app:toolbarId="@+id/toolbar">



            <TextView
                android:id="@+id/logo_part"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="45dp"
                android:text="QUICK"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="52dp"
                android:layout_height="76dp"
                android:layout_marginTop="25dp"

                app:srcCompat="@drawable/menu" />

            <ImageView
                android:id="@+id/shopping_cart"
                android:layout_width="50dp"
                android:layout_height="76dp"
                android:layout_marginLeft="335dp"
                android:layout_marginTop="25dp"

                app:srcCompat="@drawable/shopping_cart" />

            <TextView
                android:id="@+id/logo_part1"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="45dp"
                android:text="@string/logo_part1"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/logo_part2"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="199dp"
                android:layout_marginTop="50dp"
                android:text="@string/logo_part2"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="italic" />



        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="392dp"
        android:layout_height="625dp"


        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"


            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="10dp"


                android:text="Add Products"
                android:textColor="#050303"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/name_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="40dp"

                android:text="Name of the Product"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#050303"

                />

            <EditText
                android:id="@+id/name_item_edit_view"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/new_password"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/textView"
                android:hint="Enter Your product name"
                android:inputType="textPersonName"

                />

            <TextView
                android:id="@+id/price_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"

                android:text="@string/add_food_form_old_price"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#050303"

                />

            <EditText
                android:id="@+id/price_old_edit_view"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/new_password"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/textView"
                android:hint="Enter Your product name"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/new_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"

                android:text="@string/add_food_form_new_price"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#050303"

                />

            <EditText
                android:id="@+id/new_price_edit_view"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/new_password"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/textView"
                android:hint="Enter Your product name"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/food_price_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"

                android:text="@string/add_food_form_quantity"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#050303"

                />

            <EditText
                android:id="@+id/quantity_edit_view"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/new_password"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/textView"
                android:hint="Enter Your product name"
                android:inputType="number" />

            <ImageView
                android:id="@+id/imageToUpload"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginLeft="140dp"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <Button
                android:id="@+id/add_products"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:text="Add products">

            </Button>
        </LinearLayout>
    </ScrollView>







    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"


        android:layout_gravity="bottom"
        android:layout_marginBottom="-1dp"
        app:backgroundTint="@color/design_default_color_background"
        app:itemIconTint="@color/design_default_color_error"

        >

        <ImageView
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="73dp"


            app:srcCompat="@drawable/home3" />

        <ImageView
            android:id="@+id/delivery"
            android:layout_width="50dp"
            android:layout_height="76dp"
            android:layout_marginLeft="110dp"


            app:srcCompat="@drawable/delivery" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="73dp"
            android:layout_marginLeft="225dp"

            app:srcCompat="@drawable/profile" />

        <ImageView
            android:id="@+id/supplier"
            android:layout_width="50dp"
            android:layout_height="73dp"
            android:layout_marginLeft="330dp"

            app:srcCompat="@drawable/provider" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>





</RelativeLayout>