<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment_view">


    <TextView
        android:id="@+id/form_logo_part_1v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="93dp"
        android:text="PAYMENT"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/name_edit_viewv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="44dp"
        android:text="Name of the Card"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintBottom_toBottomOf="@+id/name_edit_viewv"
        app:layout_constraintStart_toStartOf="@+id/name_edit_viewv" />

    <EditText
        android:id="@+id/name_edit_viewv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_toRightOf="@+id/name"
        android:hint="Card name.."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_logo_part_1v" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Number of the card"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintBottom_toTopOf="@+id/address_edit_viewv"
        app:layout_constraintStart_toStartOf="@+id/name_edit_viewv"
        app:layout_constraintTop_toBottomOf="@+id/name_edit_viewv" />

    <EditText
        android:id="@+id/address_edit_viewv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/address"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="29dp"
        android:layout_toRightOf="@+id/textView"
        android:hint="Number of the card."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/cvc_edit_viewv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <TextView
        android:id="@+id/cvc"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:text="CVC"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="@+id/address_edit_viewv"
        app:layout_constraintTop_toBottomOf="@+id/address_edit_viewv" />

    <EditText
        android:id="@+id/cvc_edit_viewv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@+id/textView"
        android:hint="CVC.."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/expiration_viewv"
        app:layout_constraintEnd_toEndOf="@+id/expiration_viewv"
        app:layout_constraintStart_toStartOf="@+id/cvc"
        app:layout_constraintTop_toBottomOf="@+id/address_edit_viewv" />

    <TextView
        android:id="@+id/expiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentTop="true"

        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:text="Expiration"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintEnd_toEndOf="@+id/cvc"
        app:layout_constraintStart_toStartOf="@+id/address_edit_viewv"
        app:layout_constraintTop_toBottomOf="@+id/cvc_edit_viewv" />

    <EditText
        android:id="@+id/expiration_viewv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp"
        android:layout_toRightOf="@+id/textView"
        android:hint="Enter Your Email.."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/pymntubtn"
        app:layout_constraintStart_toStartOf="@+id/expiration"
        app:layout_constraintTop_toBottomOf="@+id/cvc_edit_viewv" />

    <Button
        android:id="@+id/pymntubtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="91dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pymntpbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expiration_viewv" />

    <Button
        android:id="@+id/pymntpbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:text="Proceed"
        app:layout_constraintEnd_toStartOf="@+id/pymntcbtn"
        app:layout_constraintStart_toEndOf="@+id/pymntubtn"
        app:layout_constraintTop_toTopOf="@+id/pymntubtn" />

    <Button
        android:id="@+id/pymntcbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Cancel"
        app:layout_constraintBaseline_toBaselineOf="@+id/pymntpbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pymntpbtn" />


</androidx.constraintlayout.widget.ConstraintLayout>